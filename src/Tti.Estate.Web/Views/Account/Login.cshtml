@model LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@Localizer["Title"]</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.2.1/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute"
              crossorigin="anonymous"
              integrity="sha256-azvvU9xKluwHFJ0Cpgtf0CYzK7zgtOznnzxV4924X1w=" />
    </environment>
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body class="text-center">
    <form method="post" class="form-signin">
        <h1 class="h3 mb-3 font-weight-normal">@Localizer["FormTitle"]</h1>
        <label asp-for="UserName" class="sr-only">@Html.DisplayNameFor(x => x.UserName)</label>
        <input asp-for="UserName" class="form-control" placeholder="@Html.DisplayNameFor(x => x.UserName)" autofocus>
        <label asp-for="Password" class="sr-only">@Html.DisplayNameFor(x => x.Password)</label>
        <input asp-for="Password" class="form-control" placeholder="@Html.DisplayNameFor(x => x.Password)">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger text-left"></div>
        <div class="checkbox mb-3">
            <label>
                <input asp-for="RememberMe" /> @Html.DisplayNameFor(x => x.RememberMe)
            </label>
        </div>
        <button class="btn btn-lg btn-outline-primary btn-block" type="submit">@Localizer["SignIn"]</button>
    </form>
</body>
</html>