@model CustomerListModel
<div class="modal" id="criteriaModal" tabindex="-1" role="dialog" aria-labelledby="criteriaModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-action="Index" method="get">
                <div class="modal-header">
                    <h5 class="modal-title" id="criteriaModalLabel">@Localizer["Title"]</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="@Localizer["Close"]">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="Criteria.UserId"></label>
                        <select asp-for="Criteria.UserId" asp-items="Model.Users" class="form-control">
                            <option></option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <a asp-action="Index" class="btn btn-outline-secondary">@Localizer["Reset"]</a>
                    <button type="submit" class="btn btn-secondary">@Localizer["Search"]</button>
                </div>
            </form>
        </div>
    </div>
</div>