@model PropertyProcessModel
<form asp-action="Process" method="post">
    <input asp-for="PropertyId" type="hidden" />
    <div class="modal-header">
        <h5 class="modal-title">@Localizer["Title"]</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="@Localizer["Close"]">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="custom-control custom-radio">
            <input asp-for="Status" type="radio" value="@PropertyStatusModel.Reserved" class="custom-control-input" id="@PropertyStatusModel.Reserved" />
            <label class="custom-control-label" for="@PropertyStatusModel.Reserved">@Localizer["Reserved"]</label>
            <span asp-validation-for="Status"></span>
        </div>
        <div class="custom-control custom-radio">
            <input asp-for="Status" type="radio" value="@PropertyStatusModel.Realized" class="custom-control-input" id="@PropertyStatusModel.Realized" />
            <label class="custom-control-label" for="@PropertyStatusModel.Realized">@Localizer["Realized"]</label>
        </div>
        <div class="form-group mt-2">
            <textarea asp-for="Comment" class="form-control" placeholder="@Html.DisplayNameFor(x => x.Comment)"></textarea>
            <span asp-validation-for="Comment"></span>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-sm btn-primary">@Localizer["Save"]</button>
    </div>
</form>