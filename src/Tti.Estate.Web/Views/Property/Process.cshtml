@model PropertyProcessModel
<form asp-action="Process" asp-route-id="@Model.PropertyId" method="post">
    <div class="modal-header">
        <h5 class="modal-title">@Localizer["Title"]</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="@Localizer["Close"]">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <div class="form-check form-check-inline">
                <input asp-for="Status" type="radio" value="@PropertyStatusModel.Reserved" class="form-check-input" id="@PropertyStatusModel.Reserved" />
                <label class="form-check-label" for="@PropertyStatusModel.Reserved">@Localizer["Reserved"]</label>
            </div>
            <div class="form-check form-check-inline">
                <input asp-for="Status" type="radio" value="@PropertyStatusModel.Realized" class="form-check-input" id="@PropertyStatusModel.Realized" />
                <label class="form-check-label" for="@PropertyStatusModel.Realized">@Localizer["Realized"]</label>
            </div>
            <span asp-validation-for="Status"></span>
        </div>
        <div class="form-group">
            <textarea asp-for="Comment" class="form-control" placeholder="@Html.DisplayNameFor(x => x.Comment)"></textarea>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-sm btn-primary">@Localizer["Save"]</button>
    </div>
</form>