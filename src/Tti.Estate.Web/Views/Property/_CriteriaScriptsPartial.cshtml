@model PropertyListModel
<script>
    $(function () {
        $('#@Html.IdFor(x => x.Criteria.CountyId)').change(function () {
            var city$ = $('#@Html.IdFor(x => x.Criteria.CityId)');
            $('option[value!=""]', city$).remove();
            $.get('@Url.RouteUrl("CityApi")', {
                countyId: $(this).val()
            }, function (data) {
                $.each(data, function () {
                    city$.append($('<option />').val(this.id).text(this.name));
                });
            });
        })
    });
</script>