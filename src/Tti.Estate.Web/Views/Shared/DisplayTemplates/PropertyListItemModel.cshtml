@model PropertyListItemModel
@{
    string statusClass;
    switch (Model.Status)
    {
        case PropertyStatusModel.Active:
            statusClass = "text-success";
            break;
        case PropertyStatusModel.Reserved:
            statusClass = "text-warning";
            break;
        case PropertyStatusModel.Realized:
            statusClass = "text-danger";
            break;
        default:
            statusClass = "text-secondary";
            break;
    }
}
<tr>
    <td>
        <a asp-controller="Property" asp-action="Details" asp-route-id="@Model.Id">
            @Html.DisplayFor(x => x.Id)
        </a>
    </td>
    <td>
        <i class="fa fa-circle @statusClass"></i>
        @Html.DisplayFor(x => x.Status)
    </td>
    <td>@Html.DisplayFor(x => x.Area)</td>
    <td>@Html.DisplayFor(x => x.Price)</td>
    <td>@Html.DisplayFor(x => x.Modified)</td>
</tr>