@model TransactionListItemModel
@{
    string statusClass;
    switch (Model.Status)
    {
        case TransactionStatusModel.Approved:
            statusClass = "text-success";
            break;
        case TransactionStatusModel.Approving:
            statusClass = "text-info";
            break;
        default:
            statusClass = "text-secondary";
            break;
    }
}
<tr>
    <td>
        <a asp-controller="Transaction" asp-action="Details" asp-route-id="@Model.Id">
            @Html.DisplayFor(x => x.TransactionType)
        </a>
    </td>
    <td>
        <i class="fa fa-circle @statusClass"></i>
        @Html.DisplayFor(x => x.Status)
    </td>
    <td>@Html.DisplayFor(x => x.Date)</td>
    <td>@Html.DisplayFor(x => x.Amount)</td>
    <td>@Html.DisplayFor(x => x.UserAmount)</td>
    <td>@Html.DisplayFor(x => x.CompanyAmount)</td>
</tr>