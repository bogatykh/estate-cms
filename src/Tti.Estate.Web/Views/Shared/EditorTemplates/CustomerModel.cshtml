@model CustomerModel
<div class="form-group row">
    <label class="col-sm-3 col-form-label">@Html.DisplayNameFor(x => x.UserId)</label>
    <div class="col-sm-9">
        <input asp-for="UserId" class="form-control" />
    </div>
</div>
<fieldset>
    <legend>@Html.DisplayNameFor(x => x.Description)</legend>
    <div class="form-group">
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
</fieldset>