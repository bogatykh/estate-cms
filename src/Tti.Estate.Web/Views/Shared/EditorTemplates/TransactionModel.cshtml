@model TransactionModel
<div class="form-group row">
    <label class="col-sm-3 col-form-label">@Html.DisplayNameFor(x => x.UserId)</label>
    <div class="col-sm-9">
        <select asp-for="UserId" asp-items="Model.Users" class="form-control"></select>
        <span asp-validation-for="UserId"></span>
    </div>
</div>
<div class="form-group row">
    <label class="col-sm-3 col-form-label">@Html.DisplayNameFor(x => x.TransactionType)</label>
    <div class="col-sm-9">
        <select asp-for="TransactionType" asp-items="@Html.GetEnumSelectList<TransactionTypeModel>()" class="form-control"></select>
        <span asp-validation-for="TransactionType"></span>
    </div>
</div>
<div class="form-group row">
    <label class="col-sm-3 col-form-label">@Html.DisplayNameFor(x => x.PropertyId)</label>
    <div class="col-sm-9">
        <input asp-for="PropertyId" class="form-control" />
        <span asp-validation-for="PropertyId"></span>
    </div>
</div>
<div class="form-group row">
    <label class="col-sm-3 col-form-label">@Html.DisplayNameFor(x => x.CustomerId)</label>
    <div class="col-sm-9">
        <input asp-for="CustomerId" class="form-control" />
        <span asp-validation-for="CustomerId"></span>
    </div>
</div>
<div class="form-group row">
    <label class="col-sm-3 col-form-label">@Html.DisplayNameFor(x => x.Date)</label>
    <div class="col-sm-9">
        <input asp-for="Date" type="text" class="form-control" data-provide="datepicker" data-date-end-date="0d" />
        <span asp-validation-for="Date"></span>
    </div>
</div>
<div class="form-group row">
    <label class="col-sm-3 col-form-label">@Html.DisplayNameFor(x => x.Amount)</label>
    <div class="col-sm-9">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">&euro;</span>
            </div>
            <input asp-for="Amount" class="form-control" />
            <div class="input-group-append">
                <span class="input-group-text">.00</span>
            </div>
        </div>
        <span asp-validation-for="Amount"></span>
    </div>
</div>
<div class="form-group row">
    <label class="col-sm-3 col-form-label">@Html.DisplayNameFor(x => x.CompanyPercent)</label>
    <div class="col-sm-9">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">%</span>
            </div>
            <input asp-for="CompanyPercent" class="form-control" />
        </div>
        <span asp-validation-for="CompanyPercent"></span>
    </div>
</div>
<div class="form-group row">
    <label class="col-sm-3 col-form-label">@Html.DisplayNameFor(x => x.UserPercent)</label>
    <div class="col-sm-9">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">%</span>
            </div>
            <input asp-for="UserPercent" class="form-control" />
        </div>
        <span asp-validation-for="UserPercent"></span>
    </div>
</div>
<fieldset>
    <legend>@Html.DisplayNameFor(x => x.Description)</legend>
    <div class="form-group">
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description"></span>
    </div>
</fieldset>