@model TransactionModel
<div class="row">
    <div class="col-md-6">
        <div class="form-group row">
            <label asp-for="Date" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9">
                <input asp-for="Date" type="text" class="form-control" data-provide="datepicker" data-date-end-date="0d" />
                <span asp-validation-for="Date"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="TransactionType" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9">
                <select asp-for="TransactionType" asp-items="@Html.GetEnumSelectList<TransactionTypeModel>()" class="form-control"></select>
                <span asp-validation-for="TransactionType"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="PropertyId" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9">
                <input asp-for="PropertyId" class="form-control" />
                <span asp-validation-for="PropertyId"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="CustomerId" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9">
                <input asp-for="CustomerId" class="form-control" />
                <span asp-validation-for="CustomerId"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Amount" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">&euro;</span>
                    </div>
                    <input asp-for="Amount" class="form-control" />
                    <div class="input-group-append">
                        <span class="input-group-text">.00</span>
                    </div>
                </div>
                <span asp-validation-for="Amount"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="CompanyPercent" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">%</span>
                    </div>
                    <input asp-for="CompanyPercent" class="form-control" />
                </div>
                <span asp-validation-for="CompanyPercent"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="UserPercent" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">%</span>
                    </div>
                    <input asp-for="UserPercent" class="form-control" />
                </div>
                <span asp-validation-for="UserPercent"></span>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group row">
            <label asp-for="UserId" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9">
                <select asp-for="UserId" asp-items="Model.Users" class="form-control"></select>
                <span asp-validation-for="UserId"></span>
            </div>
        </div>
    </div>
</div>
<fieldset>
    <legend>@Html.DisplayNameFor(x => x.Description)</legend>
    <div class="form-group">
        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Description"></span>
    </div>
</fieldset>