@model TransactionModel
<div class="form-group row">
    <label class="col-sm-3 col-form-label">@Html.DisplayNameFor(x => x.UserId)</label>
    <div class="col-sm-9">
        <select asp-for="UserId" asp-items="Model.Users" class="form-control"></select>
        <span asp-validation-for="UserId"></span>
    </div>
</div>
<div class="form-group row">
    <label class="col-sm-3 col-form-label">@Html.DisplayNameFor(x => x.TransactionType)</label>
    <div class="col-sm-9">
        <select asp-for="TransactionType" asp-items="@Html.GetEnumSelectList<TransactionTypeModel>()" class="form-control"></select>
        <span asp-validation-for="TransactionType"></span>
    </div>
</div>
<div class="form-group row">
    <label class="col-sm-3 col-form-label">@Html.DisplayNameFor(x => x.Date)</label>
    <div class="col-sm-9">
        <input asp-for="Date" type="text" class="form-control" data-provide="datepicker" />
        <span asp-validation-for="Date"></span>
    </div>
</div>
<fieldset>
    <legend>@Html.DisplayNameFor(x => x.Description)</legend>
    <div class="form-group">
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description"></span>
    </div>
</fieldset>