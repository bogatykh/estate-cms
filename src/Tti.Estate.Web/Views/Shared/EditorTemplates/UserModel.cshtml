@model UserModel
<div class="form-group row">
    <label asp-for="UserName" class="col-sm-3 col-form-label"></label>
    <div class="col-sm-9">
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName"></span>
    </div>
</div>
<div class="form-group row">
    <label asp-for="Role" class="col-sm-3 col-form-label"></label>
    <div class="col-sm-9">
        <select asp-for="Role" asp-items="@Html.GetEnumSelectList<UserRoleModel>()" class="form-control"></select>
        <span asp-validation-for="Role"></span>
    </div>
</div>
<div class="form-group row">
    <label asp-for="FirstName" class="col-sm-3 col-form-label"></label>
    <div class="col-sm-9">
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName"></span>
    </div>
</div>
<div class="form-group row">
    <label asp-for="LastName" class="col-sm-3 col-form-label"></label>
    <div class="col-sm-9">
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName"></span>
    </div>
</div>
<div class="form-group row">
    <label asp-for="Telephone" class="col-sm-3 col-form-label"></label>
    <div class="col-sm-9">
        <input asp-for="Telephone" class="form-control" />
        <span asp-validation-for="Telephone"></span>
    </div>
</div>