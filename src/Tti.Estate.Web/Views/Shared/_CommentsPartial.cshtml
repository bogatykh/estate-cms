@model IEnumerable<CommentListItemModel>
<fieldset>
    <legend>
        @Localizer["Title"]
        <button id="addCommentButton" class="btn btn-sm btn-outline-secondary" type="button">@Localizer["Add"]</button>
    </legend>
    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered mt-2">
                <thead>
                    <tr>
                        <th style="width: 60%;">@Localizer["Text"]</th>
                        <th>@Localizer["User"]</th>
                        <th>@Localizer["Created"]</th>
                    </tr>
                </thead>
                <tbody>
                    @Html.DisplayForModel()
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center p-2">
            <h5>@Localizer["NoData"]</h5>
        </div>
    }
</fieldset>
<div class="modal fade" id="addCommentModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>