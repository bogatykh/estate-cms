@using System.Security.Principal
<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <span class="navbar-text text-light">@User.Identity.Name</span>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="Logout" title="@Localizer["SignOut"]">
                <i class="fa fa-sign-out"></i>
                <span class="d-inline d-lg-none">@Localizer["SignOut"]</span>
            </a>
        </li>
    }
</ul>