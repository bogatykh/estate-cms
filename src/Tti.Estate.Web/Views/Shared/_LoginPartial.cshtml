@using System.Security.Principal

<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <span class="navbar-text">@User.Identity.GetPersonName()</span>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="AzureAD" asp-controller="Account" asp-action="SignOut" title="@Localizer["SignOut"]">
                <i class="fa fa-sign-out"></i>
                <span class="d-inline d-sm-none">@Localizer["SignOut"]</span>
            </a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="AzureAD" asp-controller="Account" asp-action="SignIn">
                <i class="fa fa-sign-in"></i>
                @Localizer["SignIn"]
            </a>
        </li>
    }
</ul>