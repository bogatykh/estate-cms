@model TransactionListModel
@{
    ViewData["Title"] = Localizer["Title"];
}
<div class="row">
    <div class="col-lg-3">
        <form method="get">
            <div class="card mb-3">
                <div class="card-header">
                    @Localizer["Criteria"]
                </div>
                <div class="card-body">
                    <label asp-for="Criteria.UserId"></label>
                    <select asp-for="Criteria.UserId" asp-items="Model.Users" class="form-control">
                        <option></option>
                    </select>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-secondary">@Localizer["Search"]</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-lg-9">
        <a asp-action="Create" class="btn btn-primary">
            @Localizer["Create"]
        </a>
        <div class="table-responsive">
            <table class="table table-hover mt-3">
                <thead>
                    <tr>
                        <th>@Localizer["Id"]</th>
                        <th>@Localizer["TransactionType"]</th>
                        <th>@Localizer["Date"]</th>
                        <th>@Localizer["Amount"]</th>
                        <th>@Localizer["UserAmount"]</th>
                        <th>@Localizer["CompanyAmount"]</th>
                    </tr>
                </thead>
                <tbody>
                    @Html.DisplayFor(x => x.Transactions.Items)
                </tbody>
                @if (Model.Transactions != null && Model.Transactions.TotalItems > 0)
                {
                    <tfoot>
                        <tr>
                            <td colspan="3">@Localizer["Totals"]:</td>
                            <td>@Model.TotalAmount</td>
                            <td>@Model.TotalUserAmount</td>
                            <td>@Model.TotalCompanyAmount</td>
                        </tr>
                    </tfoot>
                }
            </table>
        </div>
        <partial name="_PaginationPartial" model="Model.Transactions" />
        <partial name="_EmptyResultPartial" model="Model.Transactions" />
    </div>
</div>